		{
			"name": "End-to-End Integration Tests",
			"item": [
				{
					"name": "E2E: Flipkart to IBM (3-Layer)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response contains requestId\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('requestId');",
									"    pm.globals.set('requestId', jsonData.requestId);",
									"});",
									"",
									"pm.test(\"Status is ACCEPTED\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.status).to.eql('ACCEPTED');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"orderId\": \"FK123456789\",\n  \"processImmediate\": true,\n  \"notificationEmail\": \"test@company.com\"\n}"
						},
