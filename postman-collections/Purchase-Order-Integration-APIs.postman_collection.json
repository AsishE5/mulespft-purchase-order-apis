				{
					"name": "E2E: Amazon to HP (2-Layer)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response contains transactionId\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('transactionId');",
									"    pm.globals.set('transactionId', jsonData.transactionId);",
									"});",
									"",
									"pm.test(\"Status is SUCCESS\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.status).to.eql('SUCCESS');",
									"});",
									"",
									"pm.test(\"Contains HP formatted order\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.transformedData).to.have.property('hp_reference_number');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
